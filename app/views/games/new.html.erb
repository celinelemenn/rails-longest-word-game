<div class="container col-6 mt-3">
  <h1>New game</h1>

  <div class="letters-container d-flex mb-3">
    <%@letters.each do |letter| %>

    <div class=" mr-3 bg-primary py-2 px-3 text-white font-weight-bold border border-dark shadow-sm rounded">
      <%= letter %>
    </div>

    <%end  %>
  </div>

  <div class="">
    <p>What is the longuest word you can find ?</p>

    <form action="/score" method="POST">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'grid', @letters %>
      <%= hidden_field_tag 'start_time', @start_time %>
      <div class="form">
        <input type="text" name="input">
        <input type="submit" value="play" class="btn-primary">
      </div>
    </form>

  </div>
</div>
